<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Kayıt Ol"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            />


        <EditText
            android:id="@+id/kayitEditText"
            android:layout_margin="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail adresinizi girin" />

        <EditText
            android:layout_margin="15dp"
            android:id="@+id/kayitSifreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifrenizi Girin" />

        <Button
            android:layout_margin="15dp"

            android:id="@+id/kayitSifreButon"
            android:text="Kayıt Ol"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewKayitOl"
            android:text="Zaten Kayıt Oldun mu , Buradan Giriş Yap"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>